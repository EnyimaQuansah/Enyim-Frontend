<%- include('../partials/header') %>
<div class="container-fluid p-0">
  <!-- Hero Section -->
  <header class="hero text-white text-center" style="background-image: url('https://lh3.googleusercontent.com/uZyFmxsV_Qwc2k-CNE4-5Ts-uJ0sT3jWkyIDNHRAfpIKcSi_n-gLusHC2gDR46TCjaPorMl3j8gzQ4MStPOFSM9P1JQlih5vamA=w904-h509-rw'); background-size: cover; background-position: center; height: 70vh; position: relative;">
    <div class="overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0, 0, 0, 0.5);"></div>
    <div class="container d-flex align-items-center justify-content-center" style="height: 100%; position: relative; z-index: 1;">
      <div>
        <h1 class="display-4 font-weight-bold">Welcome to Enyim E-commerce Platform</h1>
        <p class="lead">Discover products, manage shops, and connect with customers all in one place.</p>
        <a class="btn btn-light btn-lg" href="/register" role="button">Get Started</a>
      </div>
    </div>
  </header>

  <!-- Features Section -->
  <section class="py-5 bg-light text-center">
    <div class="container">
      <h2 class="display-4 mb-4">Why Choose Us?</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">For Buyers</h5>
              <p class="card-text">Browse a wide range of products from various sellers. Enjoy competitive prices and secure transactions.</p>
              <a href="/shop" class="btn btn-primary">Shop Now</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">For Sellers</h5>
              <p class="card-text">Set up your shop quickly and easily. Reach a larger audience and grow your business with us.</p>
              <a href="/register" class="btn btn-primary">Start Selling</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Customer Support</h5>
              <p class="card-text">Our dedicated support team is here to help you with any questions or issues you may have.</p>
              <a href="/support" class="btn btn-primary">Contact Us</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-5 text-center">
    <div class="container">
      <h2 class="display-4 mb-4">What Our Users Say</h2>
      <blockquote class="blockquote">
        <p>"This platform has transformed my shopping experience! I can find everything I need in one place."</p>
        <footer class="blockquote-footer">Jane Doe, Happy Buyer</footer>
      </blockquote>
      <blockquote class="blockquote">
        <p>"As a seller, I love how easy it is to manage my shop. The support team is fantastic!"</p>
        <footer class="blockquote-footer">John Smith, Shop Owner</footer>
      </blockquote>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-5 bg-secondary text-white text-center">
    <div class="container">
      <h2>Join Us Today!</h2>
      <p>Whether you're looking to buy or sell, our platform has everything you need.</p>
      <a href="/register" class="btn btn-light btn-lg">Get Started Now!</a>
    </div>
  </section>

</div>

